#include <stdio.h>
#include <math.h>
int decimal (long long int n)
{
    int sum=0,c=0,i=0;
    while (n>0)
    {
        int d=n%10;
        if (d==1)
            sum+=pow(2,i);
        n/=10;
        i++;
    }
    return sum;
}
int octal (int n)
{
    int d,sum=0,i=1;
    while (n>0)
    {
        d=n%8;
        sum+=d*i;
        i*=10;
        n/=8;
    }
    return sum;
}
int main()
{
    long long int num;
    printf ("Enter the Binary number: ");
    scanf ("%d",&num);
    printf("The Octal number: %d\n",octal(decimal(num)));
    return 0;
}
