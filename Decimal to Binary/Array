#include <stdio.h>
int main()
{
    int i,j,d,num;
    int arr[32];
    printf ("Enter the Decimal: ");
    scanf ("%d",&num);
    for (i=0; num>0; i++)
    {
        d=num%2;
        arr[i]=d;
        num=num/2;
    }
    printf ("The binary: ");
    for (j=i-1;j>=0;j--)
    {
        printf ("%d",arr[j]);
    }
    return 0;
}
