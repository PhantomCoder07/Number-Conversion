#include <stdio.h>
#include <math.h>
int decimal (long long int n)
{
    int sum=0,c=0,i=0;
    while (n>0)
    {
        int d=n%10;
        if (d==1)
            sum+=pow(2,i);
        n/=10;
        i++;
    }
    return sum;
}
void hexa (int n)
{
    int d,j,i=1;
    char sum[1000];
    while (n>0)
    {
        d=n%16;
        if (d<10)
            d+=48;
        else
            d+=55;
        sum[i++]=d;
        n/=16;
    }
    printf ("The hexadecimal: ");
    for (j=i-1; j>0; j--)
    {
        printf("%c",sum[j]);
    }
}
int main()
{
    long long int num;
    printf ("Enter the Binary number: ");
    scanf ("%d",&num);
    hexa(decimal(num));
    return 0;
}
