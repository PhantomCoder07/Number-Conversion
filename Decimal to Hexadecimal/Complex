#include <stdio.h>
int main()
{
    int num,d,i=1;
    char sum[1000];
    printf ("Enter the Decimal: ");
    scanf ("%d",&num);
    while (num>0)
    {
        d=num%16;
        if (d<10)
            d+=48;
        else
            d+=55;
        sum[i++]=d;
        num/=16;
    }
    printf ("The hexadecimal: ");
    for (int j=i-1; j>0; j--)
    {
        printf("%c",sum[j]);
    }
    return 0;
}
