#include <stdio.h>
#include <math.h>
int main()
{
    long long int num;
    printf ("Enter the number: ");
    scanf ("%lld",&num);
    int sum=0,c=0,i=0;
    while (num>0)
    {
        int d=num%10;
        if (d==1)
        {
            sum+=pow(2,i);
        }
        else if (d!=0)
        {
            c=1;
            break;
        }
        num/=10;
        i++;
    }
    if (c==1)
        printf("Entered number is not binary.\n");
    else
        printf("The decimal number is: %d\n",sum);
    return 0;
}
