#include <stdio.h>
#include <math.h>
int decimal (long long int n)
{
    int sum=0,c=0,i=0;
    while (n>0)
    {
        int d=n%10;
        if (d==1)
        {
            sum+=pow(2,i);
        }
        else if (d!=0)
        {
            return 0;
        }
        n/=10;
        i++;
    }
    return sum;
}
int main()
{
    long long int num;
    printf ("Enter the number: ");
    scanf ("%lld",&num);
    if (decimal(num)==0)
        printf("Entered number is not binary.\n");
    else
        printf("The decimal number is: %d\n",decimal(num));
    return 0;
}
