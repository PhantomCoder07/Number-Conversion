#include <stdio.h>
int octal (int n)
{
    int d,sum=0,i=1;
    while (n>0)
    {
        d=n%8;
        sum+=d*i;
        i*=10;
        n/=8;
    }
    return sum;
}
int main()
{
    int num;
    printf ("Enter the Decimal: ");
    scanf ("%d",&num);
    printf ("The octal: %d",octal(num));
    return 0;
}
